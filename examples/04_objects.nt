#!/usr/bin/env ntalk
#
# Basic object creation and property access
#

'=== Creating Objects ===' println

obj := Object derive

'Object created successfully' println

'' println
'=== Property Access ===' println

obj at: 'name' put: 'Alice'
obj at: 'age' put: 30

('Name: ' , (obj at: 'name')) println
('Age: ' , (obj at: 'age') asString) println

'' println
'=== Checking Properties ===' println

('Has name property: ' , (obj hasProperty: 'name') asString) println
('Has city property: ' , (obj hasProperty: 'city') asString) println

'' println
'=== Property List ===' println

'Properties: ' print
obj properties println
