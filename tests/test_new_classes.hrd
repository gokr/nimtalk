# Test file for new classes: SortedCollection, Interval

# Test SortedCollection
"=== Testing SortedCollection ===" println.

Sorted := SortedCollection new.
Sorted add: 5.
Sorted add: 1.
Sorted add: 3.
Sorted add: 10.

"Sorted collection:" println.
Sorted do: [ :each | each println ].

# Test with custom sort block (descending)
DescSorted := SortedCollection sortBlock: [ :a :b | a > b ].
DescSorted add: 5.
DescSorted add: 1.
DescSorted add: 3.

"Descending sorted collection:" println.
DescSorted do: [ :each | each println ].

# Test Interval
"=== Testing Interval ===" println.

R := 1 to: 5.
"Interval 1 to: 5:" println.
R do: [ :each | each print. " " print ].
"" println.

R2 := 1 to: 10 by: 2.
"Interval 1 to: 10 by: 2:" println.
R2 do: [ :each | each print. " " print ].
"" println.

# Test collect on Interval
Squared := R collect: [ :i | i * i ].
"Squared values:" println.
Squared do: [ :each | each print. " " print ].
"" println.

# Test Array sorted method
"=== Testing Array sorted ===" println.
Arr := #(3 1 4 1 5 9 2 6).
SortedArr := Arr sorted.
"Original: #(3 1 4 1 5 9 2 6)" println.
"Sorted:" println.
SortedArr do: [ :each | each print. " " print ].
"" println.

# Test Array sorted: with custom block
"Descending sort:" println.
DescArr := Arr sorted: [ :a :b | a > b ].
DescArr do: [ :each | each print. " " print ].
"" println.

# Test remove: and indexOf:
"=== Testing Array remove: and indexOf: ===" println.
TestArr := #(10 20 30 40 50).
Index := TestArr indexOf: 30.
("Index of 30: " , (Index printString)) println.

TestArr remove: 30.
"After removing 30:" println.
TestArr do: [ :each | each print. " " print ].
"" println.

"All tests completed!" println
