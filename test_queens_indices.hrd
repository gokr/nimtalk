#!/usr/bin/env harding
# Test array indices used in queens

| arr row column minIdx maxIdx v1 v2 v3 v4 |

arr := Array new: 16.

row := 1.
column := 1.
minIdx := row - column + 8.
maxIdx := row + column.
arr at: minIdx put: 1.
arr at: maxIdx put: 2.

row := 8.
column := 8.
minIdx := row - column + 8.
maxIdx := row + column.
arr at: minIdx put: 3.
arr at: maxIdx put: 4.

v1 := arr at: 8.
v2 := arr at: 2.
v3 := arr at: 8.
v4 := arr at: 16.

v1 + v2 + v3 + v4
