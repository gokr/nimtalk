#!/usr/bin/env harding
# Debug queens

Queens := Object deriveWithAccessors: #(freeRows queenRows).

Queens>>initialize [
  | i |
  self freeRows: (Array new: 8).
  self queenRows: (Array new: 8).
  
  i := 1.
  [ i <= 8 ] whileTrue: [
    self freeRows at: i put: 1.
    self queenRows at: i put: 0.
    i := i + 1
  ]
]

Queens>>test [
  # Simple test: can we place a queen in row 1?
  | val |
  val := self freeRows at: 1.
  ^ val
]

# Main
solver := Queens new.
solver initialize.
result := solver test.
result
